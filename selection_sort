#include <stdio.h>
#include <stdlib.h>

void selection_sort(int* ary, int n);

int main(int argc, char* argv[]){
  int n;
  printf("Input Size: ");
  scanf("%d", &n);

  int* array = (int*)malloc(sizeof(int)*n);

  for (int i=0; i<n; i++){
    scanf("%d", array+i);
  }

  printf("Before Sorting..\n");
  for (int i=0; i<n; i++){
    printf("%d ", array[i]);
  }
  printf("\n");

  selection_sort(array, n);

  printf("After Sorting..\n");
  for (int i=0; i<n; i++){
    printf("%d ", array[i]);
  }
  printf("\n");

  free(array);

  return 0;
}


void selection_sort(int* ary, int n){
  for (int i=0; i<n; i++){
    int min = i;
    for (int j=i; j<n; j++){
      if (ary[j] < ary[min]) min = j;
    }
    int temp = ary[min];
    ary[min] = ary[i];
    ary[i] = temp;
  }
}
