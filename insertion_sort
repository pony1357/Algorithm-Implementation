#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void insertion_sort(int* ary, int n);

int main(int argc, char* argv[]){
  int n;
  printf("Input Size: ");
  scanf("%d", &n);

  int* array = (int*)malloc(sizeof(int)*n);
  srand(time(NULL));

  for (int i=0; i<n; i++){
    array[i] = rand() % 100;
  }

  printf("Before Sorting..\n");
  for (int i=0; i<n; i++){
    printf("%d ", array[i]);
  }
  printf("\n");

  bubble_sort(array, n);

  printf("After Sorting..\n");
  for (int i=0; i<n; i++){
    printf("%d ", array[i]);
  }
  printf("\n");

  free(array);

  return 0;
}

void insertion_sort(int* ary, int n){
  for (int i=1; i<n; i++){
		int item = ary[i];
		for (int j=i-1; j>=0; j--){
			if (ary[j] > item){
				ary[j+1] = ary[j];
			}
			else break;
		}
	}
}

