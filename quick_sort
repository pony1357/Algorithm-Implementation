#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void partition(int* ary, int low, int high, int* p);
void quick_sort(int* ary, int low, int high);

int main(int argc, char* argv[]){
  int n;
  printf("Input Size: ");
  scanf("%d", &n);

  srand(time(NULL));
  int* ary = (int*)malloc(sizeof(int)*n);
  for (int i=0; i<n; i++){
    ary[i] = rand() % 100;
  }

  printf("Before Sorting..\n");
  for (int i=0; i<n; i++){
    printf("%d ", ary[i]);
  }
  printf("\n\n");

  quick_sort(ary, 0, n-1);

  printf("After Sorting..\n");
  for (int i=0; i<n; i++){
    printf("%d ", ary[i]);
  }
  printf("\n");

  free(ary);

  return 0;
}

void quick_sort(int* ary, int low, int high){
  if (low < high){
    int q = low;
    partition(ary, low, high, &q);
    quick_sort(ary, low, q-1);
    quick_sort(ary, q+1, high);
  }
}

void partition(int* ary, int low, int high, int* p){
	int j=low;
	int pivotitem = ary[low];
	for (int i=low+1; i<=high; i++){
		if (pivotitem > ary[i]){
			j++;
			int temp = ary[j];
			ary[j] = ary[i];
			ary[i] = temp;
		}
	}
	ary[low] = ary[j];
	ary[j] = pivotitem;
	*p = j;
}
