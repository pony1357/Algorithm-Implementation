#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void bubble_sort(int* ary, int n);

int main(int argc, char* argv[]){
  int n;
  printf("Input Size: ");
  scanf("%d", &n);

  srand(time(NULL));

  int* array = (int*)malloc(sizeof(int)*n);

  for (int i=0; i<n; i++){
    array[i] = rand() % n;
  }

  printf("Before Sorting..\n");
  for (int i=0; i<n; i++){
    printf("%d ", array[i]);
  }
  printf("\n");

  bubble_sort(array, n);

  printf("After Sorting..\n");
  for (int i=0; i<n; i++){
    printf("%d ", array[i]);
  }
  printf("\n");

  free(array);

  return 0;
}

void bubble_sort(int* ary, int n){
  for (int i=1; i<n; i++){
    for (int j=n-1; j>=i; j--){
      if (ary[j-1] > ary[j]){
        int temp = ary[j];
        ary[j] = ary[j-1];
        ary[j-1] = temp;
      }
    }
  }
}
  
